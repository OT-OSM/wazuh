server.host: {{ KibanaServerHost }}
server.port: {{ KibanaServerPort }}
elasticsearch.hosts: https://localhost:{{ ESPort }}
elasticsearch.ssl.verificationMode: certificate
elasticsearch.username: {{ ElasticsearchUsername }}
elasticsearch.password: {{ ElasticsearchPassword }}
elasticsearch.requestHeadersWhitelist: ["securitytenant","Authorization"]
opendistro_security.multitenancy.enabled: true
opendistro_security.readonly_mode.roles: ["kibana_read_only"]
server.ssl.enabled: true
server.ssl.key: "{{ KibanaCertificatePath }}/kibana-key.pem"
server.ssl.certificate: "{{ KibanaCertificatePath }}/kibana.pem"
elasticsearch.ssl.certificateAuthorities: ["{{ KibanaCertificatePath }}/root-ca.pem"]
server.defaultRoute: /app/wazuh?security_tenant=global
telemetry.banner: false