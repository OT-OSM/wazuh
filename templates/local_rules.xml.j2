<!-- Example -->
<group name="local,syslog,sshd,">

  <!--
  Dec 10 01:02:02 host sshd[1234]: Failed none for root from 1.1.1.1 port 1066 ssh2
  -->
  <rule id="100001" level="5">
    <if_sid>5716</if_sid>
    <srcip>1.1.1.1</srcip>
    <description>sshd: authentication failed from IP 1.1.1.1.</description>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>
  <rule id="100345" level="12">
    <if_group>syscheck</if_group>
    <match>/etc/systemd</match>
    <description>Changes to /etc/systemd - Critical file!</description>
  </rule>
  <rule id="100346" level="11">
    <if_group>syscheck</if_group>
    <match>/etc/passwd</match>
    <description>Changes to /etc/passwd - Critical file!</description>
  </rule>
  <rule id="31300" level="10" overwrite="yes">
    <decoded_as>nginx-errorlog</decoded_as>
    <description>Nginx messages grouped.</description>
  </rule>

</group>
